<Window x:Class="WpfApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:WpfApp.MVVM.Views"
        xmlns:viewModels="clr-namespace:WpfApp.MVVM.ViewModels"
        xmlns:contentControls="clr-namespace:MVVMEssentials.ContentControls;assembly=MVVMEssentials"
        xmlns:viewModels1="clr-namespace:MVVMEssentials.ViewModels;assembly=MVVMEssentials"
        mc:Ignorable="d"
        Background="#5d5d89"
        Title="Demo" Height="550" Width="800"
        d:DataContext="{d:DesignInstance viewModels1:MainVm}">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModels:HomeVm}">
                <views:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:LoadingSpinnerDemoVm}">
                <views:LoadingSpinnerDemoView/>
            </DataTemplate>
        </Grid.Resources>

        <contentControls:Modal Panel.ZIndex="1" IsOpen="{Binding IsOpen}">
            <ContentControl Content="{Binding CurrentModalViewModel}" />
        </contentControls:Modal>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
